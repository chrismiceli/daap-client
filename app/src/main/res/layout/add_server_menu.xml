<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    xmlns:app="http://schemas.android.com/apk/res-auto" 
    xmlns:tools="http://schemas.android.com/tools" 
    android:layout_width="match_parent" 
    android:layout_height="match_parent" 
    app:layout_behavior="@string/appbar_scrolling_view_behavior" 
    tools:context="org.mult.daap.AddServerMenu" 
    tools:showIn="@layout/activity_add_server_menus">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5sp"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/serverUrlLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dip"
                    android:text="@string/url_description"
                    android:textSize="24sp"
                    android:layout_marginStart="16dip" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/serverUrlText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:inputType="textUri"
                    android:layout_marginLeft="10dip" />
                <EditText
                    android:id="@+id/serverPortText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_marginRight="20dip"
                    android:minEms="3"
                    android:inputType="number"
                    android:text="3689"
                    android:layout_marginEnd="20dip" />
            </LinearLayout>
        </LinearLayout>
        <CheckBox
            android:id="@+id/loginCheckBox"
            android:layout_marginLeft="10dip"
            android:layout_width="wrap_content"
            android:text="@string/login_required"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dip" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/passwordSection">
            <TextView
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_marginLeft="16dip" android:text="@string/password"
                android:state_enabled="false"
                android:layout_marginStart="16dip" />
            <EditText
                android:id="@+id/serverPasswordText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:inputType="textPassword"
                android:textSize="20sp"
                android:layout_marginRight="20dip"
                android:layout_marginLeft="10dip"
                android:layout_marginEnd="20dip"
                android:layout_marginStart="10dip" />
        </LinearLayout>
        <Button android:id="@+id/serverOkButton" android:layout_width="wrap_content"
            android:layout_marginLeft="10dip" android:layout_height="wrap_content"
            android:text="@string/add_server"
            android:layout_marginStart="10dip" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="16dip"
            android:layout_marginStart="16dip"
            android:id="@+id/discoveredServersSection">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5sp"
                android:textSize="24sp"
                android:text="Discovered servers:"/>
            <ProgressBar
                android:id="@+id/searchingProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ListView
                android:id="@+id/discoveredServersListView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>